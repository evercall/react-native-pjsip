{
   "compilerOptions":{
      "baseUrl":".",
      "outDir":"./dist/",
      "sourceMap":true,
      "noImplicitAny":false,
      "module":"ES2020",
      "target":"ES2020",
      "jsx":"preserve",
      "lib":[
         "ES2020"
      ],
      "experimentalDecorators": true,
      "esModuleInterop":true,
      "allowJs":true,
      "moduleResolution":"node",
      "allowSyntheticDefaultImports":true,
      "declaration": true,
      "skipLibCheck": true
   },
   "include":[
      "./src/**/*"
   ],
   "awesomeTypescriptLoaderOptions":{
      "reportFiles":[
         "./src/**/*"
      ]
   }
}
